<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog</title>
  <link rel="stylesheet" href="/styles/main.css">
  <!-- <script src="https://unpkg.com/axios/dist/axios.min.js"></script> -->
</head>

<body>
  <div class="container">
    <h1>Blog</h1>
    <a id="newPostBtn" href="/new">New Post</a>
    <ul id="postsList">
      <% posts.forEach(post=> { %>
        <li>
          <h2>
            <%=post.title%>
          </h2>
          <small>
            <%=post.date %>
          </small>
          <!-- <div>
            <p>
              <img src="/images/<%= post.image %>" alt="<%= post.title %> Image">
            </p>
            <p>
              <video width="50%" height="250px" controls>
                <source src="/videos/<%= post.video %>" type="video/mp4">
                Your browser does not support the video tag.
              </video>
            </p>
          </div> -->

          <div>
            <% if (post.image) { %>
            <p>
              <img src="/images/<%= post.image %>" alt="<%= post.title %> Image">
            </p>
            <% } %>
            <% if (post.video) { %>
              <p>
                <video width="50%" height="250px" controls>
                  <source src="/videos/<%= post.video %>" type="video/mp4">
                  Your browser does not support the video tag.
                </video>
              </p>
            <% } %>
          </div>

          <!-- <div>
            <% if (post.image) { %>

              <p>
                <img src="/images/<%= post.image %>" alt="<%= post.title %> Image">
              </p>
            <% } else if (post.video) { %>

              <p>
                <video width="50%" height="250px" controls>
                  <source src="/videos/<%= post.video %>" type="video/mp4">
                  Your browser does not support the video tag.
                </video>
              </p>
            <% } %>
          </div> -->
          <p>
            <%=post.content%>
          </p>
          <small>By: <%=post.author%> </small>
          <a class="edit" href="/edit/<%= post._id %>">Edit</a>
          <a class="delete" href="/api/posts/delete/<%= post._id %>">Delete</a>
        </li>
        <% }); %>
    </ul>
  </div>

</body>

</html>